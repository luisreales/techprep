{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (TechPrep.API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/TechPrep.API/bin/Debug/net8.0/TechPrep.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/TechPrep.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "console": "integratedTerminal",
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/TechPrep.API/Views"
      }
    }
  ]
}
